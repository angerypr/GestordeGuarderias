@model GestordeGuarderias.Web.Models.NinoViewModel

<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Detalles del Niño</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a asp-action="Index" class="btn btn-outline-primary btn-sm">Volver a la lista</a>
                        <hr />
                        <h5 class="panel-title">Información del Niño</h5>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label">Nombre</label>
                            <p class="form-control-static">@Model.Nombre</p>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Apellido</label>
                            <p class="form-control-static">@Model.Apellido</p>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Fecha de Nacimiento</label>
                            <p class="form-control-static">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Guardería</label>
                            <p class="form-control-static">@Model.Guarderia?.Nombre</p>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tutor</label>
                            <p class="form-control-static">@Model.Tutor?.Nombre @Model.Tutor?.Apellido</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted text-center">
        Crud Niños
    </div>
</div>
